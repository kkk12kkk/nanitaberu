<div class="container-fluid mt-5">
  <div class="header row">
    <div class="mx-auto">
      <div class="col">
        <h2>User info</h2>
      </div>

      <%= form_with model: @user do |f| %>
        <%= render "layouts/error", model: f.object %>

        <div class="row mt-1">
          <label for="inputName">Name</label>
        </div>
        <div class="row">
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
        </div>
        <div class="row mt-3">
          <label for="inputimage">Image</label>
        </div>
        <div class="row">
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>
        <div class="row mt-3">
          <label for="inputIntroduction">introduction</label>
        </div>
        <div class="row">
          <%= f.text_area :introduction %>
        </div>
        <div class="row mt-3">
          <%= f.submit "Update User" %>
        </div>
      <% end %>
    </div>
  </div>
</div>