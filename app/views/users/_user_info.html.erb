<h2>User info</h2>
<% if user.profile_image.attached? %>
    <%= image_tag url_for(user.profile_image), size: "100x100" %>
  <% else %>
    <%= image_tag "no_image.jpg", size: "100x100" %>
<% end %>
<table class="table">
  <tbody>
    <tr>
      <th scope="row">name</th>
      <td>
        <%= user.name %>
      </td>
    </tr>
    <tr>
      <th scope="row">introduction</th>
      <td>
        <%= user.introduction %>
      </td>
    </tr>
  </tbody>
</table>

<% if user_signed_in? && user == current_user %>
  <div class="col mt-1">
<%= link_to user_path(@user.id), class: "btn btn-outline-danger btn-block",method: :delete do %>
    <p>退会</p>
    <% end %>
  </div>
<% end %>

<% if user_signed_in? && user == current_user %>
  <div class="col mt-2">
    <%= link_to edit_user_path(user), class: "btn btn-outline-dark btn-block" do %>
    <i class="fa-solid fa-user-gear"></i>

    <% end %>
  </div>
<% end %>

<h2 class="mt-3">New taberu</h2>
<%= form_with model: @taberu do |f| %>
  <div class="field">
    <!-- f.label :title 入力する事でcode内では小文字でもサイト上では大文字になる。-->
    <%= f.label :title %><br>
    <!--小さい文字入力出来るフィールドが出来る。-->
    <%= f.text_field :title %> 
  </div>
  <div class="field">
    <%= f.label :opinion %><br>
    <!--文字入力出来るフィールドが出来る。-->
    <%= f.text_area :body %>
  </div>
  <div class="row ml-0">
    <%= f.submit 'Create Taberu',  class: "btn btn-success"   %>
  </div>
<% end %>