<% if notice %>
    <div class="alert alert-success bg-white">
        <%= notice %>
    </div>
<% end %>

<div class="container" >
  <div class="row">
      <div class="col-md-3">
        <%= render 'taberus/taberu', taberus: @taberus, user: @user %>
      </div>
       <div class="col-md-8 offset-md-1">
         <h1>Taberu detail</h1>
         <table class="table">
         </tbody>
           <tr>
             <td>
                 <%= link_to user_path(@taberu.user) do %>
                   <%= image_tag @taberu.user.get_profile_image(100, 100) %><br>
                   <%= @taberu.user.name %>
                 <% end %>
             </td>
             <td><%= link_to @taberu.title, taberu_path(@taberu) %></td>
             <td><%= @taberu.body %></td>
             <% if @taberu.user_id ==current_user.id %>
               <td><%#= link_to "Edit", edit_taberu_path(@taberu), class:"btn btn-success"%></td>
               <td><%#= link_to "Destroy", taberu_path(@taberu), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger"%></td>
            <% end %>
           </tr>
          </tbody>
          </table>
       </div>
  </div>
</div>